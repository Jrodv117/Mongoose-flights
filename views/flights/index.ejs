<%- include('../partials/header') %>
<table id="list">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th><br>
      <th>Flight number</th><br>
      <th>Departure Date/Time</th><br>
      <th> Check Destinations: </th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(m) { %>
      <tr>
        <td><%= m.airline %></td>
        <td><%= m.airport %></td>
        <td><%= m.flightNo %></td>
        <td><%= m.departs.toLocaleDateString() %> <%= m.departs.toLocaleTimeString() %></td>
        <td><a href="/flights/<%= m._id %>">Destinations</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>

<%- include('../partials/footer') %>